<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mpetk.taskme;"
    android:background="#54ABE0"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:src="@drawable/logo1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="#E8FDF6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/prikaz_korisnika_ime"
                android:hint="Name"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="#E8FDF6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/prikaz_korisnika_prezime"
                android:hint="Surname"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:background="#E8FDF6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/prikaz_korisnika_OIB"
                android:hint="OIB"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="#E8FDF6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/prikaz_korisnika_broj_osobne"
                android:hint="ID number"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="#E8FDF6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/prikaz_korisnika_adresa"
                android:hint="Address"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:background="#E8FDF6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/prikaz_korisnika_telefon"
                android:hint="Phone number"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="#E8FDF6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/prikaz_korisnika_mail"
                android:hint="E-mail"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="#E8FDF6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/prikaz_korisnika_datum_zap"
                android:hint="Date of employment"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="#E8FDF6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/prikaz_korisnika_username"
                android:hint="Username"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="#E8FDF6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/prikaz_korisnika_pass"
                android:hint="Password"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:background="#E8FDF6"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/prikaz_korisnika_tip"
                android:hint="Password"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                />




        </LinearLayout>

    </ScrollView>

</RelativeLayout>